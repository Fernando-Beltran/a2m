@using a2m.Models
@using a2mbl
@using CustomExtensions
@model BusinessModel
@{
    ViewBag.Title = "Index";
}
 <!--Seccion central genérica-->
<div class="main container col-xs-12">
    <section class="col-xs-12 product-data">
        <header>
            <h1>@Model.Business.Name<span class="tel-local">- @Model.Business.Phone</span></h1>
        </header>
        <div class="content-info-local">
            <!--Galeria imagenes o imagen única del local-->
            <div class="gallery-img-local col-sm-5 col-xs-12">
                <img class="img-responsive" src="~/media/@(ViewBag.MunicipalityByNormalizedName)/@(Model.Business.Pk_Business).jpg" alt="nombre local" onerror="this.onerror = null; this.src = '../../Content/a2m/img/no-image.jpg';" title="@Model.Business.Name" />
            </div>
            <!--Información negocio-->
            <div class="info-local col-sm-7 col-xs-12">
                <h2>@Model.Business.Address <a class="link" href="#content-mapa-local"><i class="fa fa-map-marker"></i>Ver en mapa</a></h2>
                <!--Description local | Máx 300 caracteres -->
                <p class="txt-description-local">@Model.Business.Description</p>
                @if (@Model.Business.Webpage != null && @Model.Business.Webpage != string.Empty) { 
                <!-- Si tiene web-->
                <a href="#" class="link link-web-local">@Model.Business.Webpage</a>
                }
                <!--Horario y precio por persona-->
                <span class="hour-price">Horario:<i>Abierto de 10:00h a 0:00h</i></span>
                <span class="hour-price">Precio medio/persona:<i class="price">20€</i></span>
                <!--Listado servicios del negocio en iconos-->
                <ul class="content-list-services">
                    <li class="disable">
                        <img src="../Content/a2m/img/icon-pedido-online.svg" alt="icono pedido online" title="Filtrar pedido online" />
                        <span>Pedido online</span>
                    </li>
                    <li>
                        <img src="../Content/a2m/img/icon-a-domicilio.svg" alt="icono pedido a domicilio" title="Filtrar pedido a domicilio" />
                        <span>A domicilio</span>
                    </li>
                    <li>
                        <img src="../Content/a2m/img/icon-recoger-local.svg" alt="icono recoger en local" title="Filtrar recoger en local" />
                        <span>Recoger en local</span>
                    </li>
                    <li class="disable">
                        <img src="../Content/a2m/img/icon-reservas.svg" alt="icono reservas" title="Filtrar local con reservas" />
                        <span>Reservas</span>
                    </li>
                    <li>
                        <img src="../Content/a2m/img/icon-carta-pdf.svg" alt="icono carta pdf" title="Filtrar disponible con carta PDF" />
                        <span>Carta PDF</span>
                    </li>
                    <li class="disable">
                        <img src="../Content/a2m/img/icon-menu.svg" alt="icono con menú" title="Filtrar disponible menú" />
                        <span>Con menú</span>
                    </li>
                </ul>
                <!--Botón acción local sea cual sea -->
                <div class="btn-cta">Descargar Carta PDF</div>
            </div>
        </div>
        <!--Carta del local para poder mirar-->
        <section class="content-catalog-bussines col-xs-12">
            <header>
                <h3>Mira la carta y productos de @Model.Business.Name</h3>
            </header>
            <div class="content-visual-catalog">
                <img class="icon-move-catalog" src="../Content/a2m/img/icon-move-catalog.png" alt="Icono info inspeccionar carta" title="Muevete y mira todos los productos de El Portillo" />
                <img class="catalog" src="../Content/a2m/img/restaurantes/carta-local.jpg" alt="Carta de El Portico" title="Platos e ingredientes de El Portico" />
            </div>
        </section>
        <!--Contenedor mapa localización y formulario de contacto con negocio -->
        <div class="content-map-form col-xs-12">
            <!--Mapa-->
            <section class="content-map col-sm-7 col-xs-12" id="content-mapa-local">
                <h4>Situación @Model.Business.Name</h4>
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d4300.259796117713!2d-4.026253160773357!3d40.34804985198501!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x4d7342f638aff412!2sEl+P%C3%B3rtico!5e0!3m2!1ses!2ses!4v1441270330466" width="800" height="400" frameborder="0" style="border:0" allowfullscreen></iframe>
            </section>
            <!--Formulario-->
            <section class="content-form col-sm-5 col-xs-12">
                <header>
                    <h5>@Model.Business.Name</h5>
                </header>
                <form class="form-notify">
                    <label class="col-xs-12">
                        <input type="text" placeholder="Nombre" onfocus=" this.placeholder = '' " onblur=" this.placeholder = 'Nombre' ">
                    </label>
                    <label class="col-xs-12">
                        <input type="text" placeholder="E-mail" onfocus=" this.placeholder = '' " onblur=" this.placeholder = 'E-mail' ">
                    </label>
                    <label class="col-xs-12">
                        <textarea rows="30" cols="5" placeholder="Tu mensaje" onfocus=" this.placeholder = '' " onblur=" this.placeholder = 'Tu mensaje' "></textarea>
                    </label>
                    <label class="col-xs-12">
                        <button type="button" class="btn-generic btn-form-contact">Enviar</button>
                    </label>
                </form>
            </section>
        </div>
    </section>
</div>
